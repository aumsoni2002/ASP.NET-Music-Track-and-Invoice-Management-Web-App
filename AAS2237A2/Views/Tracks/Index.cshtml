@model IEnumerable<AAS2237A2.Models.TrackBaseViewModel>

@{ 
    string actionName = ViewContext.RouteData.GetRequiredString("action");
    string title = "All Tracks";
    switch (actionName)
    {
        case "BluesJazz":
            title = "Blues & Jazz Tracks";
            break;

        case "CantrellStaley":
            title = "Cantrel & Staley Tracks";
            break;

        case "Top50Smallest":
            title = "Smallest Tracks";
            break;

        case "Top50Longest":
            title = "Longest Tracks";
            break;

        default:
            title = "All Tracks";
            break;
    }

    ViewBag.Title = title;
    }

<h2>@title</h2>

<div>
    @Html.ActionLink("All Tracks", "Index") |
    @Html.ActionLink("Blues & Jazz Tracks", "BluesJazz") |
    @Html.ActionLink("Cantrel & Staley Tracks", "CantrellStaley") |
    @Html.ActionLink("Smallest Tracks", "Top50Smallest") |
    @Html.ActionLink("Longest Tracks", "Top50Longest")

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Milliseconds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bytes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            Album
        </th>
        <th>
            Genre
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Milliseconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bytes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
        </tr>
    }

</table>
